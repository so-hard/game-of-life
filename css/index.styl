body
  display: flex
  flex-direction: column
  #warning
    transform: translate(-50%,-50%)
  .warning
    // opacity 0
    text-align: center
    line-height: 50px
    font-size: 14px
    position fixed
    top: 50%
    left 50%
    transform: translate(-50%,-340px)
    height 50px 
    width: 150px
    background: #fff
    box-shadow: 0 1px 5px 5px rgba(0, 0, 0, 0.1)
    color: red
    transition: all 0.5s
    .waring_span
      display: block
      line-height: 10px
      position absolute
      cursor pointer
      right 0
      top 0
  canvas 
    transition:  all 0.5s
  #control_up
    transform: translateY(-336px)
  .control 
    transition:  all 0.5s
    position: fixed
    top 0
    align-self: center
    display: flex
    flex-direction: column
    .but
      display: flex
      justify-content: space-around
      margin: 5px 0
      span 
        background: #fff
        text-align: center
        line-height: 20px 
        font-size: 15px
        height: 20px
        width: 40px
        display: block
        padding: 5px
        cursor pointer
        // border: 1px solid #ccc;
        box-shadow: 0 1px 1px 1px rgba(0, 0, 0, 0.1)
        transition:  all 0.5s
        &:hover
          box-shadow: 0 2px 10px 2px rgba(0, 0, 0, 0.1)
          transition:  all 0.2s
        &:active
          box-shadow: none
          transition:  all 0.1s
      input 
        margin: 10px 10px
        outline-style: none
        border: 1px solid #ccc;
        border-radius: 3px;
        font-size 14px
        padding: 5px;
        width: 80px;
        transition:  all 0.5s
        &:focus
          box-shadow: 0 1px 5px 5px rgba(0, 0, 0, 0.1)


