canvas
  display: block
  margin: 0 auto
  transition:  all 0.5s
.layer
  display: none
  text-align: center
  line-height: 50px
  font-size: 14px
  position fixed  
  top: 50%
  left 50%
  // transform: translate(-50%,-340px)
  // height 2vw 
  // width: 5vw
  background: #fff
  box-shadow: 0 1px 5px 5px rgba(0, 0, 0, 0.1)
  // color: red
  transition: all 0.5s
  .waring_span
    display: block
    line-height: 10px
    position absolute
    cursor pointer
    right 0
    top 0

#up
    transform: translateY(-100px)
    // display: none
    transition all 0.5s
    // height 0
    // position: fixed


.control 
  transition:  all 0.5s
  display: flex
  justify-content:  center
  align-items: center
  flex-direction: column
  .buts,.inputs
    display: flex
    justify-content: space-around
    align-items: center
    margin: 5px 0
    span 
      background: #fff
      text-align: center
      line-height: 20px 
      font-size: 15px
      height: 20px
      width: 40px
      margin: 5px
      display: block
      padding: 5px
      cursor pointer
      // border: 1px solid #ccc;
      box-shadow: 0 1px 1px 1px rgba(0, 0, 0, 0.1)
      transition:  all 0.5s
      &:hover
        box-shadow: 0 2px 10px 2px rgba(0, 0, 0, 0.1)
        transition:  all 0.2s
      &:active
        box-shadow: none
        transition:  all 0.1s
    input 
      margin: 10px
      outline-style: none
      border: 1px solid #ccc;
      border-radius: 3px;
      font-size 14px
      padding: 5px;
      width: 80px;
      transition:  all 0.5s
      &:focus
        box-shadow: 0 1px 5px 5px rgba(0, 0, 0, 0.1)

body
  transition all 0.8s
@media screen and (max-width:415px) 
  .control 
    .inputs
      input
        width: 10vw 
        margin: 1vw


